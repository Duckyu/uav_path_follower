<launch>
    <node name="path" pkg="rviz" type="rviz" args="-d $(find path_generator)/config/path_generator.rviz"/>
    <arg name="vel" default="0.25"/>
    <arg name="yaw_rate" default="0.3"/>
    <arg name="arv_dist" default="0.1"/>
    <arg name="LoS_radius" default="0.15"/>
    
    <param name="sitl_flag" value="True"/>
    <param name="file_dir" value="$(find path_generator)/path/indoor/path1"/>
    <!-- UAV0 -->
    <group ns="uav0">
        <param name="robot_name" value="uav0"/>
        <param name="vel" value="$(arg vel)"/>
        <param name="yaw_rate" value="$(arg yaw_rate)"/>
        <param name="arv_dist" value="$(arg arv_dist)"/>
        <param name="LoS_radius" value="$(arg LoS_radius)"/>
        <!-- control node -->
        <node pkg="path_generator" type="velocity_pursuit_guidance_sitl.py" name="control" output="screen"/>
    </group>
    <group ns="uav1">
        <param name="robot_name" value="uav1"/>
        <param name="vel" value="$(arg vel)"/>
        <param name="yaw_rate" value="$(arg yaw_rate)"/>
        <param name="arv_dist" value="$(arg arv_dist)"/>
        <param name="LoS_radius" value="$(arg LoS_radius)"/>
        <!-- control node -->
        <node pkg="path_generator" type="velocity_pursuit_guidance_sitl.py" name="control" output="screen"/>
    </group>
    <group ns="uav2">
        <param name="robot_name" value="uav2"/>
        <param name="vel" value="$(arg vel)"/>
        <param name="yaw_rate" value="$(arg yaw_rate)"/>
        <param name="arv_dist" value="$(arg arv_dist)"/>
        <param name="LoS_radius" value="$(arg LoS_radius)"/>
        <!-- control node -->
        <node pkg="path_generator" type="velocity_pursuit_guidance_sitl.py" name="control" output="screen"/>
    </group>
    <group ns="uav3">
        <param name="robot_name" value="uav3"/>
        <param name="vel" value="$(arg vel)"/>
        <param name="yaw_rate" value="$(arg yaw_rate)"/>
        <param name="arv_dist" value="$(arg arv_dist)"/>
        <param name="LoS_radius" value="$(arg LoS_radius)"/>
        <!-- control node -->
        <node pkg="path_generator" type="velocity_pursuit_guidance_sitl.py" name="control" output="screen"/>
    </group>
    <group ns="uav4">
        <param name="robot_name" value="uav4"/>
        <param name="vel" value="$(arg vel)"/>
        <param name="yaw_rate" value="$(arg yaw_rate)"/>
        <param name="arv_dist" value="$(arg arv_dist)"/>
        <param name="LoS_radius" value="$(arg LoS_radius)"/>
        <!-- control node -->
        <node pkg="path_generator" type="velocity_pursuit_guidance_sitl.py" name="control" output="screen"/>
    </group>
</launch>
