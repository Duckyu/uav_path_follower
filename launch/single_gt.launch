<launch>
    <node name="path" pkg="rviz" type="rviz" args="-d $(find path_generator)/config/path_generator.rviz"/>
    <param name="control_type" value="1"/><!-- 0: pursuit 1: LoS-->
    <param name="LoS_radius" value="1.0"/>
    <param name="sitl_flag" value="True"/>
    <param name="file_dir" value="$(find path_generator)/path/indoor/path1"/>
    <arg name="yaw_rate" default="0.15"/>
    <!-- UAV4 -->
    <group ns="uav4">
        <!-- control node -->
        <rosparam command="load" file="$(find path_generator)/config/file.yaml"/>
        <rosparam command="load" file="$(find path_generator)/config/uav4.yaml"/>
        <!--node pkg="path_generator" type="velocity_pursuit_guidance.py" name="control" output="screen"/-->
        <node pkg="path_generator" type="gt_parse_vision.py" name="gt" output="screen"/>
    </group>
</launch>
